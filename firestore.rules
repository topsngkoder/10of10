rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Разрешаем аутентифицированным пользователям читать и записывать свои данные
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Разрешаем доступ к коллекции games для пользователя
      match /games/{gameId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Правила для коллекции дуэлей
    match /duels {
      // Разрешаем аутентифицированным пользователям получать списки дуэлей
      allow list: if request.auth != null;
    }

    // Правила для отдельных документов дуэлей
    match /duels/{duelId} {
      // Разрешаем создание дуэлей аутентифицированным пользователям
      allow create: if request.auth != null;
      
      // Разрешаем чтение дуэли в следующих случаях:
      // 1. Если пользователь является создателем или соперником
      // 2. Если дуэль в статусе "waiting" (для поиска дуэлей по коду)
      allow read: if request.auth != null && (
        resource.data.creator.uid == request.auth.uid ||
        (resource.data.opponent != null && resource.data.opponent.uid == request.auth.uid) ||
        resource.data.status == "waiting"
      );
      
      // Разрешаем обновление дуэли в следующих случаях:
      // 1. Если пользователь является создателем
      // 2. Если пользователь является соперником
      // 3. Если дуэль в статусе "waiting" и пользователь пытается присоединиться к ней
      allow update: if request.auth != null && (
        resource.data.creator.uid == request.auth.uid ||
        (resource.data.opponent != null && resource.data.opponent.uid == request.auth.uid) ||
        (resource.data.status == "waiting" &&
         resource.data.creator.uid != request.auth.uid &&
         request.resource.data.status == "active" &&
         request.resource.data.opponent.uid == request.auth.uid)
      );
      
      // Разрешаем удаление дуэли только создателю и только если дуэль в статусе "waiting"
      allow delete: if request.auth != null && 
        resource.data.creator.uid == request.auth.uid && 
        resource.data.status == "waiting";
    }
    
    // Разрешаем чтение комбинаций всем пользователям
    match /combinations_easy/{docId} {
      allow read: if true;
    }
    
    match /combinations_medium/{docId} {
      allow read: if true;
    }
    
    match /combinations_hard/{docId} {
      allow read: if true;
    }
  }
}