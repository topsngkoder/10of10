rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Разрешаем аутентифицированным пользователям читать и записывать свои данные
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Разрешаем доступ к коллекции games для пользователя
      match /games/{gameId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Правила для дуэлей
    match /duels/{duelId} {
      // Разрешаем создание дуэлей аутентифицированным пользователям
      allow create: if request.auth != null;
      
      // Разрешаем чтение дуэли, если пользователь является создателем или соперником
      allow read: if request.auth != null && (
        resource.data.creator.uid == request.auth.uid || 
        (resource.data.opponent != null && resource.data.opponent.uid == request.auth.uid)
      );
      
      // Разрешаем обновление дуэли, если пользователь является создателем или соперником
      allow update: if request.auth != null && (
        resource.data.creator.uid == request.auth.uid || 
        (resource.data.opponent != null && resource.data.opponent.uid == request.auth.uid)
      );
      
      // Разрешаем удаление дуэли только создателю и только если дуэль в статусе "waiting"
      allow delete: if request.auth != null && 
        resource.data.creator.uid == request.auth.uid && 
        resource.data.status == "waiting";
    }
    
    // Разрешаем чтение комбинаций всем пользователям
    match /combinations_easy/{docId} {
      allow read: if true;
    }
    
    match /combinations_medium/{docId} {
      allow read: if true;
    }
    
    match /combinations_hard/{docId} {
      allow read: if true;
    }
  }
}